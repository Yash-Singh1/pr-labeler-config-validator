{
  "name": "pr-labeler-config-validator",
  "version": "0.0.3",
  "private": true,
  "description": "PR Labeler Config Validator",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint:fix": "eslint ./ --fix",
    "lint": "eslint ./__tests__/**/*.ts ./src/**/*.ts jest.config.ts",
    "package": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format-check && npm run format && npm run lint && npm run lint:fix && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yash-Singh1/pr-labeler-config-validator.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Yash Singh",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@actions/http-client": "^2.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.4",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "4.3.2",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
